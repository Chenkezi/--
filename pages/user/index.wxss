/* 收货管理地址 */
.address_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
/* 应用信息相关 */
.app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_item{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app_info_contact{
  display: flex;
  justify-content: space-between;
}
